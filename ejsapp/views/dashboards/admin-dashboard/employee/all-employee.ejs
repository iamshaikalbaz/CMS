<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head', { css: "empty", title: "Admin-Dashboard" }); %>
    <link rel="stylesheet" href="/css/admin-dashboard/employee/all-employee.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<%- include('../dashboards/dashboard', { title: "Employee Dashboard", name: "Admin" }); %>

<body>
    <div class="container">
        <div class="box box1">
            <table class="table">
                <thead>
                    <tr id="name">
                        <th colspan="8">Employees</th>
                    </tr>
                    <tr>
                        <th scope="col">App. Id</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Email</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach(applicant => { %>
                        <tr>
                            <td><%= applicant.id %></td>
                            <td><%= applicant.first_name %></td>
                            <td><%= applicant.last_name %></td>
                            <td><%= applicant.username %></td>
                            <td><%= applicant.mobile %></td>
                            <td><%= applicant.email %></td>
                            <td>
                                <form action="/admin/application/delete/<%= applicant.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="fa-solid fa-trash-can"></button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

<%- include('../partials/footer'); %>
</html>
