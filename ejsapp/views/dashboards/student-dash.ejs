            <i class="fa-solid fa-mobile-screen-button"></i>
            <h3>
                <%= typeof mobile !=='undefined' ? mobile : 'N/A' %>
            </h3>
        </div>
        <div class="box-3">
            <h3 style="margin-left: -140px;">Email</h3>
            <i class="fa-solid fa-envelope"></i>
            <h3>
                <%= typeof email !=='undefined' ? email : 'N/A' %>
            </h3>
        </div>
        <div class="box-4">
            <h3 style="margin-left: -140px;">Group</h3>
            <i class="fa-sharp fa-solid fa-user-graduate"></i>
            <h3>
                <%= typeof course !=='undefined' ? course : 'N/A' %>
